{
  "name": "utility-toolkit",
  "version": "0.2.0",
  "description": "essential set of tools to develop web-components or SPA applications",
  "scripts": {
    "preversion": "npm run test",
    "version": "",
    "postversion": "git push && git push --tags",
    "build": "npm run task",
    "task": "taskr",
    "test": "mocha --require babel-register ./test/**/*.spec.js"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "spa applications",
    "library",
    "toolkit"
  ],
  "engines": {
    "node": "7.6.0",
    "npm": "4.1.2"
  },
  "author": "Dmitri Redcenco",
  "license": "MIT",
  "devDependencies": {
    "@taskr/babel": "^1.1.0",
    "@taskr/clear": "^1.1.0",
    "@taskr/concat": "^1.1.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^6.0.4",
    "babel-plugin-syntax-flow": "^6.8.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-amd": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.22.0",
    "chai": "^4.1.2",
    "eslint-plugin-flowtype": "2.30.0",
    "mocha": "^4.0.1",
    "taskr": "^1.1.0",
    "taskr-xo": "^1.0.0",
    "xo": "^0.17.0"
  },
  "babel": {
    "presets": [
      "env",
      "stage-1"
    ],
    "plugins": [
      "syntax-flow",
      "transform-flow-strip-types"
    ]
  },
  "jspm": {
    "registry": "jspm",
    "jspmPackage": true,
    "format": "amd",
    "directories": {
      "dist": "lib"
    }
  }
}

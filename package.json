{
  "name": "utility-toolkit",
  "version": "0.2.0",
  "description": "essential set of tools to develop web-components or SPA applications",
  "scripts": {
    "preversion": "npm run test",
    "version": "",
    "postversion": "git push && git push --tags",
    "build": "npm run flow:check && npm run task:build && npm run flow:copy-source",
    "flow:copy-source": "flow-copy-source src lib",
    "flow:check": "flow check",
    "task": "taskr",
    "task:build": "npm run task clean build",
    "test": "mocha --require babel-register ./test/**/*.spec.js"
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "spa applications",
    "library",
    "toolkit"
  ],
  "engines": {
    "node": "7.6.0",
    "npm": "4.1.2"
  },
  "author": "Dmitri Redcenco",
  "license": "MIT",
  "devDependencies": {
    "@taskr/clear": "^1.1.0",
    "@taskr/concat": "^1.1.0",
    "@taskr/unflow": "^1.1.0",
    "babel-eslint": "^6.0.4",
    "chai": "^4.1.2",
    "eslint-plugin-flowtype": "2.30.0",
    "flow-bin": "^0.60.1",
    "flow-copy-source": "^1.2.1",
    "mocha": "^4.0.1",
    "taskr": "^1.1.0",
    "taskr-xo": "^1.0.0",
    "xo": "^0.17.0"
  },
  "jspm": {
    "registry": "jspm",
    "jspmPackage": true,
    "format": "esm",
    "configFile": "jspm.config.js",
    "directories": {
      "dist": "lib"
    }
  }
}

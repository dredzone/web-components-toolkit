{
  "name": "utility-toolkit",
  "version": "0.19.0",
  "description": "Essential set of tools to develop web-components and applications",
  "main": "bundles/umd/index.js",
  "module": "lib/index.js",
  "scripts": {
    "version": "",
    "postversion": "git push && git push --tags",
    "clean": "rimraf lib",
    "build": "npm run build:lib && npm run bundle",
    "lint": "eslint src",
    "serve": "env-cmd .env node ./tasks/serve.js execute",
    "test": "env-cmd .env node tasks/headless-tests.js",
    "flow": "npm run flow:check && npm run flow:transform && npm run flow:copy",
    "flow:check": "flow check ./src/",
    "flow:copy": "flow-copy-source src lib",
    "flow:transform": "flow-remove-types  --pretty src/ --out-dir lib/",
    "build:lib": "npm run clean && npm run lint && npm run flow",
    "bundle": "npm run bundle:lib & npm run bundle:test",
    "bundle:lib": "rollup -c rollup.config.js",
    "bundle:test": "rollup -c rollup.config.test.js"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "keywords": [
    "web-components",
    "custom-elements",
    "spa applications",
    "library",
    "toolkit"
  ],
  "engines": {
    "node": "7.6.0",
    "npm": "4.1.2"
  },
  "author": "Dmitri Redcenco",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.1.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.1.2",
    "env-cmd": "^8.0.1",
    "eslint": "^4.19.1",
    "eslint-plugin-flowtype": "2.30.0",
    "express": "^4.16.3",
    "flow-bin": "^0.60.1",
    "flow-copy-source": "^1.2.1",
    "flow-remove-types": "^1.2.3",
    "get-port": "^3.2.0",
    "husky": "1.0.0-rc.2",
    "lint-staged": "7.1.0",
    "mocha": "^4.0.1",
    "prettier": "^1.12.1",
    "puppeteer": "^1.3.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "jspm": {
    "main": "lib/index",
    "registry": "jspm",
    "jspmPackage": true,
    "format": "esm"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0"
  }
}
